{# Mes tricks #}
<div class="card mt-4 shadow">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-pen text-primary mr-1"></i>
            Mes tricks
        </h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            {% if user.tricks |length == 0 %}
                <p class="mb-0 text-center">Vous n'avez jusqu'à présent créé aucun trick, rendez-vous sur cette <a href="{{ path('trick_new') }}">page</a> pour créer votre premier trick !</p>
            {% else %}
                {% for trick in user.tricks %}
                    <li class="list-group-item">
                        <i class="fas fa-snowboarding text-danger mr-1"></i>
                        <span class="responsive-style badge badge-primary">
                            {{ trick.style.name }}
                        </span>
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}">
                            {{ trick.name }}
                        </a>
                        <div class="float-right">
                            <a href="{{ path('trick_update', {'slug': trick.slug}) }}" title="Modifier le trick" class="text-decoration-none mr-2">
                                <i class="fas fa-edit text-primary"></i>
                            </a>
                            <a href="" class="text-decoration-none deleteTrick mr-2" title="Supprimer le trick" data-toggle="modal" data-target="#deleteTrickModal" data-id="{{ trick.id }}">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </a>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>
    </div>
</div>

{% include 'partials/alert.html.twig' %}