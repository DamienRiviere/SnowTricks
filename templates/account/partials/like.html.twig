{# Ma sélection de tricks #}
<div class="card mt-4 shadow">
    <div class="card-header">
        <h4 class="mb-0">
            <i class="fas fa-thumbs-up mr-1 text-primary"></i>
            Ma sélection de tricks
        </h4>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            {% if likes != null %}
                {% for like in likes %}
                    {% set trick = like.trick %}
                    <li class="list-group-item">
                        <i class="fas fa-snowboarding text-danger mr-1"></i>
                        {{ trick.style.name }} |
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}">{{ trick.name }}</a>
                        <div class="float-right">
                            <a href="{{ path('trick_edit', {'slug': trick.slug}) }}" title="Modifier le trick" class="text-decoration-none mr-2">
                                <i class="fas fa-edit text-primary"></i>
                            </a>
                            <a href="" id="unlikeButton" data-id="{{ trick.id }}" class="text-danger">
                                Supprimer de la liste
                            </a>
                        </div>
                    </li>
                {% endfor %}
            {% else %}
                <p class="mb-0 text-center">Vous n'avez jusqu'à présent aimé aucun trick.</p>
            {% endif %}
        </ul>
    </div>
</div>

{% block javascripts %}
    <script src="{{ asset('js/accountDeleteTrickLike.js') }}"></script>
{% endblock %}