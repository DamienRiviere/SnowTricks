{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe{% endblock %}

{% block body %}
    {% set user = app.user %}
    {% include 'account/partials/title_section.html.twig' %}

    <div class="container py-5">
        {% include 'account/partials/profile.html.twig' %}

        <div class="card mt-4 shadow">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-lock text-primary mr-1"></i>
                    Changement de mot de passe
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}

                {{ form_row(form.password) }}

                {{ form_errors(form) }}

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check mr-1"></i>
                    Valider
                </button>

                {{ form_end(form) }}
            </div>
        </div>

        {% include 'account/partials/trick.html.twig' %}

        {% include 'account/partials/like.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('js/modal_delete') }}
    {{ encore_entry_script_tags('js/section_title') }}
{% endblock %}