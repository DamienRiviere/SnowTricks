{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau tricks{% endblock %}

{% block body %}

    <div class="container-fluid bg-light py-5 text-center section-title">
        <h2 class="text-primary">Créer un nouveau trick</h2>
        <p class="font-weight-bold mb-0">Entrer votre trick préféré !</p>
    </div>

    <div class="container py-5">
        {{ form_start(form) }}

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Informations générales :</h4>
            </div>
            <div class="card-body">
                {{ form_row(form.name) }}

                {{ form_row(form.description) }}

                {{ form_row(form.coverPicture) }}

                {{ form_row(form.style) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6 mt-5">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Ajouter une image :</h4>
                    </div>
                    <div class="card-body">
                        {{ form_row(form.pictureLink) }}

                        {{ form_row(form.pictureAlt) }}
                    </div>
                </div>
            </div>

            <div class="col-6 mt-5">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Ajouter une vidéo :</h4>
                    </div>
                    <div class="card-body">
                        {{ form_row(form.videoLink) }}
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-block btn-primary mt-5">Valider</button>

        {{ form_end(form) }}
    </div>

{% endblock %}