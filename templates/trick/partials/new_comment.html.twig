{% if app.user is empty %}
    <div class="alert alert-secondary">
        <p>Connectez-vous ou inscrivez-vous pour laisser un commentaire !</p>
        <a href="{{ path('auth_login') }}">Connexion</a>
        |
        <a href="{{ path('register_index') }}">Inscription</a>
    </div>
{% else %}
    <div class="card mb-4 shadow mt-4">
        <h5 class="card-header card-header-sm">
            <i class="far fa-comment text-primary mr-1"></i>
            Laisser un commentaire
        </h5>
        <div class="card-body responsive-comment-body">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_row(form.content) }}
            </div>

            <button id="btnNewComment" type="submit" data-url="{{ path('trick_new_comment', {'slug': trick.slug}) }}" class="btn btn-primary">Poster</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endif %}