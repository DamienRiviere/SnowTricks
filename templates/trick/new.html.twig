{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau tricks{% endblock %}

{% form_theme form 'trick/_collection.html.twig' %}

{% block body %}
    <div class="container-fluid bg-light py-5 text-center section-title">
        <h2 class="text-primary">Créer un nouveau trick</h2>
        <p class="font-weight-bold mb-0">Entrer votre trick préféré !</p>
    </div>

    <div class="container py-5">
        {{ form_start(form) }}

        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-pen-square mr-1 text-primary"></i>
                    Informations générales
                </h4>
            </div>
            <div class="card-body">
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                {{ form_row(form.style) }}
            </div>
        </div>


        <div class="card mt-5">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-images mr-1 text-primary"></i>
                    Images du trick
                </h4>
            </div>
            <div class="card-body">
                {{ form_row(form.pictures) }}
            </div>
        </div>

        <div class="card mt-5">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-video mr-1 text-primary"></i>
                    Vidéos du trick
                </h4>
            </div>
            <div class="card-body">
                {{ form_row(form.videos) }}
            </div>
        </div>

        <div class="alert alert-success clearfix mt-5">
            <p class="mb-0 font-weight-bold">
                Vous êtes sur le point de valider votre trick !
                <button type="submit" class="btn btn-primary float-right">
                    <i class="fas fa-check mr-1"></i>
                    Valider
                </button>
            </p>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/newTrickAjax.js') }}"></script>
    <script src="{{ asset('js/trick_picture.js') }}"></script>
    <script src="{{ asset('js/trick_video.js') }}"></script>
{% endblock %}