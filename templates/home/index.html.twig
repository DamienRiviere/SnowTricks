{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Accueil{% endblock %}

{% block body %}

    {% include 'partials/header.html.twig' %}

    <div class="container-fluid bg-light py-5 text-center">
        <h2 class="text-primary">Tous les tricks</h2>
        <p class="font-weight-bold mb-0">L'annuaire de toutes les figures entr√© par les utilisateurs</p>
    </div>

    <div class="container-fluid">
        <div class="row">
            {% for trick in tricks %}
            <div class="col-2 py-4">
                <div class="card" style="width: 18rem;">
                    {% for picture in trick.pictures | slice(0, 1) %}
                        <img src="{{ picture.link }}" class="card-img-top" alt="{{ picture.alt }}">
                    {% endfor %}
                    <div class="card-body">
                        <h5 class="card-title mb-0">
                            <a href="/trick/{{ trick.slug }}" class="text-decoration-none">{{ trick.name }}</a>
                            <div class="float-right">
                                <a href="#" title="Modifier le tricks" class="text-decoration-none">
                                    <i class="fas fa-edit text-primary"></i>
                                </a>
                                <a href="#" title="Supprimer le tricks" class="text-decoration-none">
                                    <i class="fas fa-trash-alt text-danger"></i>
                                </a>
                            </div>
                        </h5>
                    </div>
                </div>
            </div>
            {% endfor %}
    </div>

    <div class="d-flex justify-content-center mb-4">
        <a href="#" class="btn btn-primary">
            <i class="fas fa-spinner mr-1"></i>
            Afficher plus
        </a>
    </div>
{% endblock %}